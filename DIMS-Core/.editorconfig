indent_size=2

[*.{appxmanifest,asax,ascx,aspx,build,cg,cginc,compute,cs,cshtml,dtd,hlsl,hlsli,hlslinc,master,nuspec,razor,resw,resx,skin,usf,ush,vb,xaml,xamlx,xoml,xsd}]
